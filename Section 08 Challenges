mysql> SELECT DISTINCT UPPER(
    ->
    -> CONCAT('MY FAVORITE AUTHOR IS ', author_fname, ' ', author_lname, '!')) AS 'yell'
    ->
    -> FROM books
    ->
    -> ORDER BY author_lname ASC;
